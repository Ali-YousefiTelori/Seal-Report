@using Seal.Model;
@{
    ReportViewTemplate Template = Model;

    //Template Name
    Template.Name = ReportViewTemplate.KPIName;

    //If true, the view can be configured for a report model
    Template.ForReportModel = false;

    //Parameters for this template
    Template.Parameters.Add(new Parameter() { Name = "kpi_trend_direction", BoolValue = true, DisplayName = "Trend: Direction", Description = "If true, the trend is up if the last value if greater than the first value, otherwise it is down." });
    Template.Parameters.Add(new Parameter() { Name = "kpi_trend_values", NumericValue = -1, DisplayName = "Trend: First value to use", Description = "The index of the value to used to defined the trend. If -1 is set, the first value of the table is used. If 1 is set, the value before the last value is used." });
    Template.Parameters.Add(new Parameter() { Name = "kpi_has_goals", BoolValue = false, DisplayName = "Goals defined", Description = "If true, the goal values are taken from the next column in the result table. In this case, a data element dedicated for goals values must be defined in the model after the data element used for the values." });

    //Allowed template parent names
    Template.ParentNames = new List<string>() { "Model", "Model Container" };
}
  