@using Seal.Model
@using System.Drawing;
@{
    Theme Theme = Model;

    //Theme Name
    Theme.Name = "Seal Default Theme";

    //This is the default theme
    Theme.IsDefault = true;

    //Parameters for this theme
    Theme.Values.Add(new Parameter() { Name = "value_color", DisplayName = "Values color", Value = "#FFF", Description = "Color of the normal value cells" });
    Theme.Values.Add(new Parameter() { Name = "value_odd_color", DisplayName = "Values odd color", Value = "#e8e6e6", Description = "Color of the value cells in an odd line" });
    Theme.Values.Add(new Parameter() { Name = "title_color", DisplayName = "Titles color", Value = "#FFF", Description = "Color of the title cells" });
    Theme.Values.Add(new Parameter() { Name = "total_color", DisplayName = "Totals color", Value = "#ddd", Description = "Color of the totals cells" });
    Theme.Values.Add(new Parameter() { Name = "title_text_color", DisplayName = "Titles text color", Value = "#d14836", Description = "Color of the title" });
    Theme.Values.Add(new Parameter() { Name = "title_cell_text_color", DisplayName = "Title cells text color", Value = "#d14836", Description = "Color of the text in title cells" });
    Theme.Values.Add(new Parameter() { Name = "table_background_color", DisplayName = "Table background color", Value = "#e8e6e6", Description = "Background color of the page and data tables" });
}
